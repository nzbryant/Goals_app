<div style="margin-bottom:30px">
  <h1 style="float:left">Active Goals</h1>
  <%= button_to "Create a New Goal", new_user_goal_path, :id => "btn", :method => :get %>

</div>

<div class="row-fluid">

  <table id="myTable" class "tablesorter">
    <thead>
      <tr>
        <th class="span1">Life Area</th>
        <th class="span1 sorter-shortDate dateFormat-mmddyyyy">Target Date (ddmmyyyy)</th>
        <th class="span4">Goal</th>
        <th class="span5 sorter-false">Strategy</th>
        <th class="span1 sorter-false">Edit/Delete</th>
        <!--th class="th-categ-edit"></th-->
        <!--th class="th-categ-delete"></th-->
      </tr>
    </thead>

    <tbody>
      <!--% :order => "name DESC" %-->
      <% unless @goals.empty? %>
        <% for goal in @goals %>
        <tr>
          <td><%= goal.life_area %></td>
          <td><%= l goal.target_date.to_date %></td>
          <td><%= goal.text %></td>
          <td style = "white-space: pre-wrap"><%= goal.strategy %></td>
          <td><%= link_to "Edit", edit_user_goal_path(current_user.id, goal) %> /
            <!--Delete the goal-->  
              <%= link_to "Delete", user_goal_path(current_user.id, goal), :method => :delete, :confirm => "Are you sure" %>   
          </td>

        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<!--Buttons for pics, using Backstretch plugin. Click triggers JS-->
  <p style="text-align: right; color:white; font-weight: bold; margin-bottom:-3px;">Click a number to show an image (stops slideshow)</p>
  <button id="3" style="display: inline-block; width:1em;">3</button>
  <button id="2" style="display: inline-block; width:1em;">2</button>
  <button id="1" style="display: inline-block; width:1em;">1</button>
</div>  
